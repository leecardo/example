# Example Project Environment Configuration
# 复制此文件为 .env 并根据实际环境修改配置

# ===============================
# 服务端口配置
# ===============================
JAVA_APP_PORT=8080
PYTHON_AI_SERVICE_PORT=8081
NGINX_PORT=80

# ===============================
# 数据库配置
# ===============================
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=test
DB_USER=root
DB_PASSWORD=root123

# ===============================
# Redis缓存配置
# ===============================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===============================
# 向量数据库配置
# ===============================
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# ===============================
# 消息队列配置
# ===============================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ===============================
# Python AI服务特定配置
# ===============================
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
NLP_MODEL=facebook/bart-large-cnn
PYTHON_DEBUG=false
PYTHON_LOG_LEVEL=INFO

# ===============================
# Java应用特定配置
# ===============================
SPRING_PROFILES_ACTIVE=docker
JAVA_LOG_LEVEL=INFO

# ===============================
# 监控配置（可选）
# ===============================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# ===============================
# 文件上传配置
# ===============================
MAX_FILE_SIZE=50MB
UPLOAD_TEMP_DIR=temp_uploads

# ===============================
# 安全配置
# ===============================
CORS_ORIGINS=http://localhost:8080,http://localhost:8081
API_RATE_LIMIT=100

# ===============================
# 开发/生产环境标识
# ===============================
ENVIRONMENT=development
DEBUG=true